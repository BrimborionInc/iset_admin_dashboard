{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Character Count Component Props Schema",
  "type": "object",
  "required": ["name", "label", "hint", "rows", "maxlength", "threshold"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "id": { "type": "string" },
    "label": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] },
        "classes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "hint": {
      "type": "object",
      "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
      "additionalProperties": true
    },
    "errorMessage": {
      "type": "object",
      "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
      "additionalProperties": true
    },
    "classes": { "type": "string" },
    "formGroup": {
      "type": "object",
      "properties": { "classes": { "type": "string" } },
      "additionalProperties": true
    },
    "rows": { "type": ["number", "string"], "minimum": 1 },
    "maxlength": { "type": ["number", "string"], "minimum": 1 },
    "maxwords": { "type": ["number", "null", "string"], "minimum": 1 },
    "threshold": { "type": ["number", "string"], "minimum": 0, "maximum": 100 },
    "autocomplete": { "type": "string" },
    "spellcheck": { "type": "boolean" },
    "value": { "type": ["string", "null"] }
  },
  "additionalProperties": true
}
