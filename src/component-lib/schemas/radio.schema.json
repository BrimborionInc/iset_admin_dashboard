{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/radio.schema.json",
  "title": "Radio Component",
  "type": "object",
  "required": ["name", "items", "fieldset"],
  "additionalProperties": true,
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "fieldset": {
      "type": "object",
      "required": ["legend"],
      "properties": {
        "legend": {
          "type": "object",
            "required": ["text", "isPageHeading", "classes"],
            "properties": {
              "text": { "type": "string", "minLength": 1 },
              "isPageHeading": { "type": "boolean" },
              "classes": { "type": "string" }
            }
        }
      }
    },
    "hint": {
      "type": "object",
      "properties": { "text": { "type": "string" } },
      "required": ["text"],
      "additionalProperties": true
    },
    "classes": { "type": "string" },
    "formGroup": { "type": "object", "properties": { "classes": { "type": "string" } } },
    "disabled": { "type": "boolean" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["text", "value"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "value": { "type": ["string", "number"] },
          "hint": { "type": ["string", "null"], "maxLength": 300 },
          "conditional": { "type": ["object", "null"] },
          "attributes": { "type": ["object", "null"] }
        },
        "additionalProperties": true
      }
    }
  }
}
