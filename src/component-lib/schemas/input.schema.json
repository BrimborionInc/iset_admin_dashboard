{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Input Component Props Schema",
  "type": "object",
  "required": ["name", "label", "hint", "classes", "formGroup", "type"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "id": { "type": "string" },
    "label": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] },
        "classes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "hint": {
      "type": "object",
      "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
      "additionalProperties": true
    },
    "errorMessage": {
      "type": "object",
      "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
      "additionalProperties": true
    },
    "classes": { "type": "string" },
    "formGroup": {
      "type": "object",
      "properties": { "classes": { "type": "string" } },
      "additionalProperties": true
    },
    "type": { "type": "string" },
    "autocomplete": { "type": "string" },
    "inputmode": { "type": "string" },
    "pattern": { "type": "string" },
    "spellcheck": { "type": "boolean" },
  "mask": { "type": "string", "enum": ["", "phone-na", "sin-ca", "postal-code-ca", "postal-code-us", "date-iso", "time-hm", "currency"] },
    "value": { "type": ["string", "number", "null"] }
  },
  "additionalProperties": true
}
