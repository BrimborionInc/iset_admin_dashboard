{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Signature Acknowledgment Component Props Schema",
  "type": "object",
  "required": ["name", "label", "hint", "actionLabel", "clearLabel", "placeholder"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "id": { "type": "string" },
    "label": {
      "type": "object",
      "required": ["text"],
      "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] }, "classes": { "type": "string" } },
      "additionalProperties": true
    },
    "hint": { "type": "object", "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } }, "additionalProperties": true },
    "actionLabel": { "type": "object", "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } }, "additionalProperties": true },
    "clearLabel": { "type": "object", "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } }, "additionalProperties": true },
    "placeholder": { "type": "object", "properties": { "text": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } }, "additionalProperties": true },
    "handwritingFont": { "type": "string" },
    "required": { "type": "boolean" },
    "classes": { "type": "string" }
  },
  "additionalProperties": true
}
